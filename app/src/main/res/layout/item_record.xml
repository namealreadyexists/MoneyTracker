<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="@dimen/list_record_indent"
    android:background="@drawable/item_bg"
    >

    <TextView
        android:id="@+id/list_item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="left"
        android:padding="@dimen/list_item_indent"
        android:textColor="@color/colorText"
        tools:text="Milkeyreyreyeryeryreyreyeryeryeryeryreyreyryreyeryreyreyeryreyery"
        />
    <TextView
        android:id="@+id/list_item_price"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:background="@color/colorShadow"
        android:gravity="center"
        android:padding="@dimen/list_item_indent"
        android:textColor="@color/colorText"
        tools:text="704364364646436436"
        />

</LinearLayout>